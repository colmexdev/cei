<% if admin_signed_in? %>

<p id="notice"><%= notice %></p>

<h1>Listado de <%= params[:set] %></h1><br>

<%= render "panel/params_filtro", set: params[:set] %>

<% if false %>
<a class="uk-link" onclick="hideLink(event,'#index-panel','<%= panel_nuevo_path(:set => params[:set]) %>')">Nuevo elemento</a>
<% end %>
<table id="index-panel">
  <thead>
    <tr id="header-ind">
			<% @fields.values.each_with_index do |f,i| %>
			<td class="head-ind"><%= f %><br><span class="span-cursor" data-field="<%= @fields.keys[i].to_s %>" data-order="asc" title="Ordenar de manera ascendente" onclick="<%= "hideLink(event,'#index-panel','#{panel_index_path(set: params[:set], offset: params[:offset].to_i)}',null,document.getElementById('keyword').value,null,this,true)" %>"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span> <span class="span-cursor" title="Ordenar de manera descendente" data-field="<%= @fields.keys[i].to_s %>" data-order="desc"  onclick="<%= "hideLink(event,'#index-panel','#{panel_index_path(set: params[:set], offset: params[:offset].to_i)}',null,document.getElementById('keyword').value,null,this,true)" %>"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span><span class="fa-stack span-cursor span-oculto" title="No ordenar" data-field="<%= @fields.keys[i].to_s %>" data-order="nil"  onclick="<%= "hideLink(event,'#index-panel','#{panel_index_path(set: params[:set], offset: params[:offset].to_i)}',null,document.getElementById('keyword').value,null,this,true)" %>"><i class="fa fa-stack-1x fa-square span-canvas" aria-hidden="true"></i><i class="fa fa-stack-1x fa-times fa-inverse span-lay-c" aria-hidden="true"></i></span></td>
			<% end %>
			<% @imgs.values.each do |f| %>
			<td class="head-ind"><%= f %></td>
			<% end %>
			<td class="head-ind-img" style="width:130px;"></td>
    </tr>
  </thead>

  <tbody style="font-size:14px;">
    <% @set.each do |s| %>
      <tr class="row-ind">
				<% @fields.keys.each do |f| %>
        <td class="ind-cell"><%= raw(s[f.to_s]) %></td>
				<% end %>
				<% @imgs.keys.each do |f| %>
					<td class="ind-cell left-align"><%= s.public_send(f).url.include?(".pdf") ? (raw "<object type=\"application/pdf\" data =\"" + s.public_send(f).url + "\"><embed src=\"" + s.public_send(f).url + "\" type=\"application/pdf\"></object>") : (image_tag(s.public_send(f).url)) %></td>
				<% end %>
				<td class="ind-cell-img" style="width:130px;">
					<a class="link-img-panel" onclick="hideLink(event,'#index-panel','<%= panel_mostrar_path(:set => params[:set], :id => s.id) %>')"><span class="clickable-g glyphicon glyphicon-eye-open"></span></a>
					<a class="link-img-panel" onclick="hideLink(event,'#index-panel','<%= panel_editar_path(:set => params[:set], :id => s.id) %>')"><span class="clickable-g glyphicon glyphicon-pencil"></span></a>
					<% if params[:set] != "Contenido de sitios" %>
					<a class="link-img-panel" onclick="hideLink(event,'#index-panel','<%= panel_eliminar_path(:set => params[:set], :id => s.id) %>','DELETE')"><span class="clickable-g glyphicon glyphicon-trash"></span></a>
					<% end %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div style="margin-bottom:25px;text-align:center;font-size:18px;font-weight:500;">
<% ind = 0 %>

	<% if @pags > 1 %>
		<span class="numeros" style="margin:0 4px;cursor:<%= params[:offset].to_i != 0 ? "pointer" : "default" %>;" <%= params[:offset].to_i != 0 ? ("onclick=hideLink(event,'#index-panel','" + panel_index_path(set: params[:set], offset: params[:offset].to_i - 1) + "',null,document.getElementById('keyword').value,null,null,true)") : "" %>><i class="fa fa-angle-left"></i></span>
	<% end %>

<% while ind < @pags %>
	<span class="numeros" style="margin:0 4px;cursor:pointer;<%= params[:offset].to_i == ind ? "color:rgb(153, 51, 102);" : "" %>" onclick="hideLink(event,'#index-panel','<%= panel_index_path(set: params[:set], offset: ind) %>',null,document.getElementById('keyword').value,null,null,true)"><%= ind + 1 %></span>
	<% ind = ind + 1 %>
<% end %>

	<% if @pags > 1 %>
		<span class="numeros" style="margin:0 4px;cursor:<%= params[:offset].to_i != @pags - 1 ? "pointer" : "default" %>;" <%= params[:offset].to_i != @pags - 1 ? ("onclick=hideLink(event,'#index-panel','" + panel_index_path(set: params[:set], offset: params[:offset].to_i + 1) + "',null,document.getElementById('keyword').value,null,null,true)") : "" %>><i class="fa fa-angle-right"></i></span>
	<% end %>
</div>
<% if false %>
<a class="uk-link" onclick="hideLink(event,'#index-panel','<%= panel_princ_path %>')">Inicio</a>
<% end %>

<script type="text/javascript">

	var cols = $(".head-ind").length;
	$(".head-ind").each(function(index){
		$(this).css({"width": adjustWidths(cols), "text-align": "center", "font-weight": "500","font-size": "16px"}).css('width',('-='+(130/cols)+'px'));
	});
	$(".ind-cell").each(function(index){
		if(this.innerHTML.length > 100){
			var n_html = this.innerHTML.substring(0,100) + "..."
			this.innerHTML = n_html;
		}
	});
	highlightSort();

</script>
<% end %>
