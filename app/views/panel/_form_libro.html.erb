<%= form_for(@obj, :remote => true, :url => {:controller => "panel", :action => (action_name == "editar" ? "editar" : "crear"), :params => {:set => params[:set], :id => (@obj.id if action_name == "editar")}}, :html => { :multipart => true }) do |f| %>
  <% if @obj.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@obj.errors.count, "error") %> impidieron generar este objeto:</h2>

      <ul>
      <% @obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <div class="field">
    <%= f.label :titulo, "Título" %><br>
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :descripcion, "Descripción" %><br>
    <%= f.trix_editor :descripcion %>
  </div>
  <div class="field">
    <%= f.label :liga, "Liga" %><br>
    <%= f.text_field :liga %>
  </div>
  <div class="field" style="height:250px;">
		<div class="photo-upload">
    <%= f.label :portada, raw('<span class="glyphicon glyphicon-upload glyph-padding"></span>Añadir portada') %><br>
    <%= f.file_field :portada, :onchange => "readURL(this,'#foto-emerito')" %><br>
		</div>
		<div class="img-display">
			<% if !@obj.portada.url.nil? %>
				<img id="foto-emerito" src="<%= @obj.portada.url %>">
			<% else %>
				<span>No hay portada para mostrar.</span>
			<% end %>
		</div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

